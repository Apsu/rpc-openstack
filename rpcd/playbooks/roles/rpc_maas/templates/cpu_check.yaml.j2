type              : agent.cpu
label             : cpu--{{ inventory_hostname|quote }}
disabled          : false
period            : "{{ maas_check_period }}"
timeout           : "{{ maas_check_timeout }}"
alarms            :
    idle_percent_average        :
        label                   : idle_percent_average--{{ inventory_hostname|quote }}
        notification-plan       : "{{ maas_notification_plan }}"
        criteria                : |
            consecutiveCount={{ maas_alarm_local_consecutive_count }}
            if (metric["idle_percent_average"] <= 10.0) {
                return new AlarmStatus(WARNING, "CPU time spent idle has dropped to <= 10%");
            }
